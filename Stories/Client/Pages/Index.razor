<div class="row">
    @for (int j = 0; j < 3; j++)
    {
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <AdaptiveCard Schema="@schema"></AdaptiveCard>
            </div>
        }
    }
</div>

@code {
    string schema = string.Empty;
    UploadedStory[] stories = null;

    protected override async Task OnInitializedAsync()
    {
        // run the stories asynchronously (though they are to the same server, so I
        // don't know if it is beneficial, we'd have to do some performance testing)

        Task schemaTask = Task.Run(async () =>
        {
            await LoadStorySchema();
        });

        Task storiesTask = Task.Run(async () =>
        {
            await LoadStories();
        });

        // now make sure both Tasks are complete before exiting this function

        await schemaTask;
        await storiesTask;
    }

    private async Task LoadStorySchema()
    {
        HttpResponseMessage schemaResult = await http.GetAsync("AdaptiveCard?cardtype=story");

        schema = await schemaResult.Content.ReadAsStringAsync();
    }

    private async Task LoadStories()
    {
        // add code to retrieve stories from the server
    }
}
