{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "Stories",
            "horizontalAlignment": "Center",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "Username",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "style": "text",
            "id": "UserVal"
        },
        {
            "type": "TextBlock",
            "text": "Password",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "id": "PassVal"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Login",
            "data": {
                "id": "LoginVal"
            }
        }
    ]
}