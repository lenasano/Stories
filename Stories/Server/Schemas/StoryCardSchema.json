{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "extraLarge",
      "weight": "Bolder",
      "text": "{{Title}}",
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "by John",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "{{DateCreated}}",
              "isSubtle": true,
              "wrap": true
            }
          ],
          "width": "auto"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "{{FirstParagraph}}",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View",
      "url": "Story/{{StoryId}}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}